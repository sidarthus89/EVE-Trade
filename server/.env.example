# Environment Configuration
NODE_ENV=development
PORT=3000

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_mysql_user
DB_PASSWORD=your_mysql_password
DB_NAME=eve_data_site

# CORS Configuration (your VPS domain and GitHub Pages)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,https://your-vps-domain.com,https://yourusername.github.io

# ESI API Configuration
ESI_BASE_URL=https://esi.evetech.net/latest
ESI_USER_AGENT=EVE-Data-Site/1.0
ESI_RATE_LIMIT_DELAY=100

# Cache Settings (in seconds)
CACHE_REGIONS=86400
CACHE_STATIONS=86400
CACHE_MARKET_ORDERS=300
CACHE_MARKET_HISTORY=3600

# Scheduler Configuration
ENABLE_SCHEDULER=true
